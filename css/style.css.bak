body {
	width: 100%;
	height: 100%;
	background-color: #7BA9F9;
	background-image: url(/img/background.jpg);
	background-size: cover;
	background-repeat: no-repeat;
}

.navbar-custom {
  background-color: rgba(3, 16, 32, 0.6);
  border-radius: 0px;
}

.navbar-custom li a {
	color: #ddd;
	transition: all 0.3s;
	outline: none;
}

.navbar-custom li a:hover, .navbar-custom li a:focus {
	background: none;
	transition: all 0.3s;
	color: #8FC0FE;
}

@media (min-width:768px) {
	.navbar-custom li a:not(.active-menu):before {
		content: "";
		position: absolute;
		width: 100%;
		height: 1px;
		bottom: 0.5em;
		left: 0;
		background-color: #64B4F9;
		visibility: hidden;
		-webkit-transform: scaleX(0);
		transform: scaleX(0);
		-webkit-transition: all 0.3s ease-in-out 0s;
		transition: all 0.3s ease-in-out 0s;
		box-shadow: 0px 0px 3px 1px rgb(100, 180, 249);
	}

	.navbar-custom li a:hover:before {
		visibility: visible;
		-webkit-transform: scaleX(0.8);
		transform: scaleX(0.8);
	}
	
	.active-menu:before {
		content: "";
		position: absolute;
		width: 100%;
		height: 1px;
		bottom: 0.5em;
		left: 0;
		background-color: #64B4F9;
		visibility: visible;
		-webkit-transform: scaleX(0.8);
		transform: scaleX(0.8);
		-webkit-transition: all 0.3s ease-in-out 0s;
		transition: all 0.3s ease-in-out 0s;
		box-shadow: 0px 0px 3px 1px rgb(100, 180, 249);
	}
	
}

.img-responsive {
	height: 100%;
}

.navbar-toggle .icon-bar {
	background-color: #9BC7FE;
}

.panel {

	background-color: rgba(255, 255, 255, 0.8);
}

.caption{
display: block;
}

#img_cont {
  display: table;
  width: 90%;
  margin: 20px auto;
}

#img_cont a {
  display: table-cell;
  text-align: center;
  width: 16%;
}

#img_cont img {
  width: 100%;
  max-width: 150px;
}
.loader-wrapper {
	width: 100%;
	height: 100%;
	position: fixed;
	background-color: #7BA9F9;
	background-image: url(/img/background.jpg);
	background-size: cover;
	background-repeat: no-repeat;
}

header {
	padding-bottom: 4em;
}

table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}